<div class="form_edit">
      <h1> Change Basic Info </h1>
      <%= form_for :user,  html: {class: "form_"} do |f| %>
      
            <%= f.label "First Name", class: 'l_form' %>
                  <%= f.text_field :first_name, class: 'form_c' %>
            <br>
            <%= f.label "Last Name", class: 'l_form' %>
                  <%= f.text_field :last_name, class: 'form_c' %>
            <br>
            <%= f.label :user_name, class: 'l_form' %>
                  <%= f.text_field :user_name, class: 'form_c' %>
            <br>
            <%= f.label :email, class: 'l_form' %>
            <br>
                  <%= f.text_field :email, class: 'form_c' %>
            </br>
            <%= f.submit "Change Basic Info", class: 'f_s_b' %>
            
      <% end %>
</div>